<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:applicationContext=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.6">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/gatewayHeadingText"
                android:textAlignment="center" android:text="Select a Gateway" android:textStyle="bold"
                android:textAllCaps="true" android:textColor="#03A9F4"/>
        <ListView
                android:layout_width="match_parent"
                android:id="@+id/gatewayListing"
                android:clickable="false"
                tools:layout_editor_absoluteY="41dp" tools:layout_editor_absoluteX="50dp"
                android:layout_height="500dp">
        </ListView>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp" android:id="@+id/gatewayListingStatusText"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>