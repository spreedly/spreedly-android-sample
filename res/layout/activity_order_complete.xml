<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrderCompleteActivity">

    <TextView
            android:text="Thank you for your purchase!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/completePurchaseHeadingText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"/>

    <Button
            android:text="Start Over"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/orderCompleteRestartButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/background_light"/>

    <Button
            android:text="Purchase another on:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/orderCompleteRestartGatewayButton"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/orderCompleteRestartButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/background_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>